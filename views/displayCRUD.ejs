<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        table, th, td {
          border:1px solid black;
        }
        th,td{
            padding-left: 10px;
        }
        .a-edit, .a-delete{
            text-decoration: none;
        }
        .btn-edit, .btn-delete{
            outline: none;
            height: 25px;
            width: 60px;
            border-radius: 3px;
        }
        .btn-edit{
            background: orange;
        }
        .btn-delete{
            background: red;
        }
        </style>
</head>
<body>
    <div className="container">
        <div className="row">
            <div className="col-12 mt-3"><b>Get CRUD from view</b></div>
            <div className="col-12">
                <table style="width:100%" className="mt-3">
                    <tr>
                    <th>Email</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Address</th>
                    <th>Action</th>
                    </tr>
                    
                    <% for(let i=0; i<dataTable.length;i++){ %>
                        <tr>
                            <td><%= dataTable[i].email %></td>
                            <td><%= dataTable[i].firstName %></td>
                            <td><%= dataTable[i].lastName %></td>
                            <td><%= dataTable[i].address %></td>
                            <td>
                                <a href="/edit-crud?id=<%= dataTable[i].id %>" className="a-edit" >
                                    <button type="button" className="btn-edit">Edit</button>
                                </a>
                                <a href="/delete-crud?id=<%= dataTable[i].id %>" className="a-delete" >
                                    <button type="button" className="btn-delete">Delete</button>
                                </a>
                            </td>
                        </tr>
                    <% } %>
                </table>
            
            </div>
        </div>
    </div>
</body>
</html>